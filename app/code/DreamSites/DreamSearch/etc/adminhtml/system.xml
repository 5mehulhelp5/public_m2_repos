<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="dreamsites" translate="label" sortOrder="401" class="ds-extensions">
            <label>Dream Sites</label>
        </tab>
        <section id="dreamsites_dreamsearch" translate="label" type="text" sortOrder="300" showInDefault="1"
                 showInWebsite="1" showInStore="1">
            <label>Search Config</label>
            <tab>dreamsites</tab>
            <resource>DreamSites_DreamSearch::configuration</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>General Configuration</label>
                <field id="search_enabled" translate="label" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Enable Dream Search</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="data_mode" translate="label comment" type="select" sortOrder="15" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Data Search Mode</label>
                    <source_model>DreamSites\DreamSearch\Model\Config\DataModeOptions</source_model>
                    <comment>Choose the default data search mode.</comment>
                    <depends>
                        <field id="search_enabled">1</field>
                    </depends>
                </field>
                <field id="sort_mode" translate="label comment" type="select" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Data Sort Mode</label>
                    <source_model>DreamSites\DreamSearch\Model\Config\DataSortOptions</source_model>
                    <comment>Choose the default data sort mode.</comment>
                    <depends>
                        <field id="search_enabled">1</field>
                    </depends>
                </field>
                <field id="max_results" translate="label comment" type="text" sortOrder="25" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Maximum Search Results</label>
                    <validate>validate-digits validate-not-negative-number
                    </validate>
                    <comment>Maximum search results or leave blank for unlimited.</comment>
                    <depends>
                        <field id="search_enabled">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
